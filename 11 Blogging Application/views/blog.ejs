<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Blog</title>
</head>
<body>
    <!-- Your content here -->
    <%- include('partials/navbar') %>

    <div class="container mt-3">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" class="w-700px" />
        <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px"/>
        <%= blog.createdBy.username %>
    </div>

    <div class="container mt-3">
        <h1>Comments <%= (comment.length) %></h1>
        <% if (locals.user) { %>

            <form action="/blog/comment/<%= blog._id %>" method="post"">

                <div class="mb-3">
                    <input type="text" name="content" class="form-control" id="content" placeholder="Enter Your Comment">
                </div>
                
                <button type="submit" class="btn btn-primary">Add</button>
    
            </form>
        
        <% } %>
    
    </div>

    <div class="container mt-3">
        <% comment.forEach(cmt => { %>
            <img src="<%= cmt.createdBy.profileImageURL %>" width="50px"/>
            <%= cmt.createdBy.username %>
            <pre><%= cmt.content %></pre>
        <% }) %>
    </div>
   
    <!-- Your scripts here -->
    <%- include('partials/scripts') %>
</body>
</html>